{
  "manifest_version": 2,
  "name": "Nightwave Plaza",
  "version": "1.0",
  "description": "Ascolta la radio online direttamente dal tuo browser.",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "https://radio.plaza.one/"
  ]
}